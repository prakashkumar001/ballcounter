<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter MPIN"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_horizontal"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/imageview_circle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_pin_unselect"
                                />
                            <ImageView
                                android:id="@+id/imageview_circle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_pin_unselect"
                                />
                            <ImageView
                                android:id="@+id/imageview_circle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_pin_unselect"
                                />
                            <ImageView
                                android:id="@+id/imageview_circle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_pin_unselect"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:src="@drawable/pin1_selector"
                                    android:tag="1" />

                                <ImageView
                                    android:id="@+id/text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:src="@drawable/pin2_selector"
                                    android:tag="2"
                                    android:textSize="25dp" />

                                <ImageView
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:src="@drawable/pin3_selector"
                                    android:tag="3"
                                    android:textSize="25dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/text4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin4_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="4" />

                                <ImageView
                                    android:id="@+id/text5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin5_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="5"
                                    android:textSize="25dp" />

                                <ImageView
                                    android:id="@+id/text6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin6_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="6"
                                    android:textSize="25dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/text7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin7_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="7" />

                                <ImageView
                                    android:id="@+id/text8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin8_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="8"
                                    android:textSize="25dp" />

                                <ImageView
                                    android:id="@+id/text9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin9_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="9"
                                    android:textSize="25dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/erase"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin_delete_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="" />

                                <ImageView
                                    android:id="@+id/text0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin0_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag="0"
                                    android:textSize="25dp" />

                                <ImageView
                                    android:id="@+id/delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/pin_erase_selector"
                                    android:gravity="center"
                                    android:onClick="enterPin"
                                    android:tag=""
                                    android:textSize="25dp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <!-- <Button
                                 android:id="@+id/enter"
                                 android:layout_width="60dp"
                                 android:layout_height="match_parent"
                                 android:layout_margin="10dp"
                                 android:ems="1"
                                 android:padding="20dp"
                                 android:textStyle="bold"
                                 android:background="@drawable/clock_in_selector"
                                 android:text="ENTER"
                                 android:textColor="@android:color/white"
                                 android:textSize="20dp" />-->


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </FrameLayout>
</LinearLayout>