<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dexeldesigns.ballcounter">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_bg"
        android:label="@string/app_name"
        android:name=".common.GlobalClass"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".umpire.TabPageActivity"
            android:theme="@style/dialogtheme"
            android:screenOrientation="portrait"
            />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PinLogin"
            android:screenOrientation="portrait"
            />
        <activity android:name=".LoginType"
            android:screenOrientation="portrait"
            />


        <activity android:name=".fingerprint.FingerprintActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>